# AWS Configuration
aws_region        = "ap-southeast-1"
ecr_public_region = "us-east-1"  # Public ECR must use us-east-1
aws_profile       = "master-programmatic-admin"

# ECR Repository Names
counting_service_repository_name  = "counting-service"
dashboard_service_repository_name = "dashboard-service"

# Docker Image Configuration
image_tag = "latest"

# Local Docker Images (set these to your actual image names)
local_counting_image  = "ei2000/counting:latest"
local_dashboard_image = "ei2000/dashboard:latest"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["ap-southeast-1a", "ap-southeast-1b"]
enable_nat_gateway = true

# ECS Configuration
cluster_name                 = "demo-cluster"
service_discovery_namespace  = "demo.local"
cpu_architecture             = "X86_64"  # or "ARM64" for ARM-based

# Service Sizing
counting_service_cpu            = "256"
counting_service_memory         = "512"
counting_service_desired_count  = 1

dashboard_service_cpu           = "256"
dashboard_service_memory        = "512"
dashboard_service_desired_count = 1
